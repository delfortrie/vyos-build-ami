service {
    ssh {
        disable-password-authentication
        port 22
    }
}
system {
    host-name VyOS-AMI
    console {
        device ttyS0 {
            speed 115200
        }
    }
    syslog {
        global {
            facility all {
                level notice
            }
            facility protocols {
                level debug
            }
        }
    }
    ntp {
        server "0.pool.ntp.org"
        server "1.pool.ntp.org"
        server "2.pool.ntp.org"
    }
    config-management {
        commit-revisions 100
    }
    options {
        http-client {
            source-interface eth0
        }
    }
}
interfaces {
    ethernet eth0 {
        address dhcp
        description "EC2 primary network interface"
    }
    loopback lo {
    }
}
